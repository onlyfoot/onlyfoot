{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "components",
    "pages",
    "context",
    "data.ts",
    "types.ts",
    "main.tsx",
    "index.tsx",
    "index.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
